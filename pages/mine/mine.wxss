/* pages/mine/mine.wxss */
page{
  background: #f5f5f5;
}
.my-info{
  margin-left: 20rpx;
  width: 710rpx;
  height: 173rpx;
  background:rgba(255,255,255,1);
  box-shadow:4px 1px 14px 2px rgba(12,12,13,0.1);
  border-radius:20px;
  line-height: 165rpx;
  margin-top: 20rpx;
}
.head-img{
  display: inline-block;
  width: 109rpx;
  height: 109rpx;
  border-radius: 50%;
  overflow: hidden;
  vertical-align: middle;
  margin-left: 20rpx;
}
.head-img open-data{
  width: 100%;
  height: 100%;
  line-height: 100rpx;
}
.ninckname-and-sex{
  display: inline-block;
  width: 535rpx;
  height: 100%;
  vertical-align: middle;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.nickname{
  position: relative;
  display: inline-block;
  margin-left: 20rpx;
}
.sex{
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  /* vertical-align: middle; */
}
.sex image{
  width: 100%;
  height: 100%;
 vertical-align: middle;
}
.more{
  display: inline-block;
  width: 12rpx;
  height: 23rpx;
}
.more image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.vip-icon{
  position: absolute;
  bottom: 25rpx;
  width: 81rpx;
  height: 29rpx;
  line-height: 29rpx;
  color: #fff;
  background:linear-gradient(90deg,rgba(108,108,108,1),rgba(15,15,15,1));
  border:1px solid rgba(149,149,149,1);
  border-radius:15rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
}
.vip-icon image{
  width: 24rpx;
  height: 20rpx;
  vertical-align: middle;
  margin-left: 10rpx;
  margin-right: 5rpx;
  margin-top: -10rpx;
}
.panel-container{
  width:710rpx;
  height:auto;
  margin: 0 auto;
  background:rgba(255,255,255,1);
  border-radius:20px;
  margin-top: 20rpx;
}
.panel-item{
  width: 100%;
  height: 112rpx;
  line-height: 112rpx;
  border-top: 1px solid rgba(238,238,238,1);
}
.panel-icon{
  display: inline-block;
  width: 34rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.panel-icon image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.panel-name{
  display: inline-block;
  width: 600rpx;
  margin-left: 20rpx;
}
.panel-more{
  display: inline-block;
  width: 12rpx;
  height: 23rpx;

}
.panel-more image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.panel-item:first-child{
  border: none;
}

/* 我的订单 */
.my-order-con{
  width: 710rpx;
  margin: 0 auto;
  height: 259rpx;
  background:rgba(255,255,255,1);
  border-radius:20px;
  margin-top: 50rpx;
}
.order-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid rgba(238,238,238,1);
}
.title{
  float: left;
  width: 200rpx;
  height: 100%;
  text-indent: 20rpx;
  font-size:26rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(36,36,36,1);
}
.all-order{
  float: right;
  width: 300rpx;
  height: 100%;
  text-align: right;
  font-size:18rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(153,153,153,1);
}
.more-order{
  display: inline-block;
  width: 10rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.more-order image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.order-menu-container{
  display: flex;
  width: 100%;
  height: calc(100%-80rpx);
}
.menu-item{
  position: relative;
  flex: auto;
  font-size:22rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(28,28,28,1);
  text-align: center;
}
.menu-icon{
  position: relative;
  margin: 0 auto;
  width: 49rpx;
  height: 44rpx;
  margin-top: 45rpx;
}
.menu-icon image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.menu-text{
  margin-top: 20rpx;
}
.dot{
  position: absolute;
  top: -25rpx;
  right: -25rpx;
  width:32rpx;
  height:32rpx;
  background:rgba(0,0,0,1);
  border:3px solid rgba(255,255,255,1);
  border-radius:50%;
  color: #fff;
}
