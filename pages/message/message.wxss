/* pages/message/message.wxss */
page{
  background: rgba(249,249,249,1);

}
.msg-list-container{
  width: 750rpx;
  background: #fff;
  margin-top: 20rpx;
}
.msg-item{
  width: 100%;
  height:136rpx;
  line-height: 136rpx;
  background:rgba(255,255,255,1);
  border-bottom: 1px solid rgba(229,229,229,1);
}
.logo{
  display: inline-block;
  width:100rpx;
  height:100rpx;
  border-radius:20rpx;
  margin-left: 30rpx;
}
.logo-sys{
  display: inline-block;
  width:100rpx;
  height:100rpx;
  line-height: 100rpx;
  border-radius:20rpx;
  margin-left: 30rpx;
  background:linear-gradient(90deg,rgba(250,168,62,1),rgba(255,83,15,1));
  vertical-align: middle;
  text-align: center;
}
.logo-order{
  display: inline-block;
  width:100rpx;
  height:100rpx;
  line-height: 100rpx;
  border-radius:20rpx;
  margin-left: 30rpx;
  background:linear-gradient(90deg,rgba(46,189,250,1),rgba(56,164,250,1));
  vertical-align: middle;
  text-align: center;
}
.logo-order image{
  width: 34rpx;
  height: 44rpx;
  vertical-align: middle;
}
.logo-sys image{
  width: 52rpx;
  height: 38rpx;
  vertical-align: middle;
  /* border-radius: 20rpx; */
}
.logo image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
  border-radius: 20rpx;
}
.msg-text-con{
  display: inline-block;
  vertical-align: middle;
  margin-left: 20rpx;
}
.msg-name{
  width: 500rpx;
  height: 60%;
  line-height: 60rpx;
  font-size:34rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  vertical-align: middle;
}
.msg-text{
  width: 500rpx;
  height: 40%;
  line-height: 40rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(170,170,170,1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.msg-detail{
  display: inline-block;
  width: 90rpx;
  height: 100%;
  vertical-align: middle;
}
.time{
  width: 100%;
  height: 50%;
  line-height: 90rpx;
  font-size:24rpx;
  font-family:SFUIText-Regular;
  font-weight:400;
  color:rgba(191,191,191,1);
}
.dot{
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  background:rgba(255,218,11,1);
  border-radius:50%;
  font-size:24rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(71,71,71,1);
  margin: 10rpx auto;
}