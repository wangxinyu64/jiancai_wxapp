/**index.wxss**/
/* 顶部工具 */
.top-tools-container{
  position: fixed;
  top:0;
  left:0;
  width: 750rpx;
  z-index: 999;
  box-sizing: border-box;
}
.tools-con{
  position: relative;
  height: 44px;
}
.location{
  position: absolute;
  width: 100rpx;
  height: 38rpx;
  line-height: 38rpx;
  top: 50%;
  margin-top: -19rpx;
  left: 33rpx;
}
.now-location{
  display: inline-block;
  font-size:40rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(0,0,0,1);
}
.location-icon{
  display: inline-block;
  width: 16rpx;
  height: 14rpx;
  vertical-align: middle;
  margin-left: 12rpx;
}
.location-icon image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}
/* 搜索 */
.index-search{
  position: absolute;
  width: 370rpx;
  height: 62rpx;
  top: 50%;
  margin-top: -31rpx;
  left: 158rpx;
  border-radius: 62rpx;
  background:rgba(255,255,255,0.6);
}
.search-input{
  position: absolute;
  width: 360rpx;
  height:54rpx;
  top: 50%;
  margin-top: -25rpx;
  left: 10rpx;
}
.search-input input{
  width: 100%;
  height: 100%;
  display: inline-block;
  vertical-align: middle;
  color: #fff;
}
.search-icon{
  position: absolute;
  width: 80rpx;
  height: 28rpx;
  line-height: 28rpx;
  top: 50%;
  left: 50%;
  margin-left: -40rpx;
  margin-top: -14rpx;
  color: #fff;
  font-size: 22rpx;
  font-weight: lighter;
  text-align: center;
}
.search-icon image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  padding-right: 6rpx;
}


/* banner */
.banner-box{
  position: relative;
  width: 750rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.banner-bac {
  position: absolute;
  top: -25%; 
  left: -5%;
  width: 110%;
  max-width: 750rpx;
  height: 650rpx;
  /* overflow: hidden; */
  z-index: -2;
  text-align: center;
}
.banner-bac swiper{
     width: 120%;
    height: 120%;
    /* max-width: 750rpx; */
    max-height: 750rpx;
    filter: blur(8px);
    overflow: hidden;
}

.banner-bac image{
    width: 120%;
    height: 120%;
    /* max-width: 750rpx; */
    max-height: 750rpx;
    filter: blur(8px);
    overflow: hidden;
}

.banner-bottom{
  width:1500rpx;
  height:1500rpx;
  border-radius:100%;
  position: absolute;
  bottom:-1350rpx;
  left:-50%;
  background-color: #f5f5f5;
  z-index: 1;
}

.banner-container {
  width:750rpx;
  height:300rpx;
  z-index: 998;
}
.banner{
  position: relative;
  width: 691rpx;
  height: 300rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  z-index: 2;
}
.banner swiper{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}
.slide-image{
  width: 691rpx;
  height: 300rpx;
  border-radius: 20rpx;
}
/* 分类 */
.index-menu-container{
  width: 750rpx;
  background: #fff;
  height: 210rpx;
  box-sizing: border-box;
  overflow: hidden;
  margin-top: 25rpx;
}
.menu-bg{
  display: flex;
  width: 691rpx;
  height: 181rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  /* border:1px solid rgba(255, 255, 255, 1);
  box-shadow:0rpx 2rpx 15rpx 5rpx rgba(0, 0, 0, 0.2); */
}
.menu-item{
  position: relative;
  width: 25%;
  height: 100%;

}
.menu-icon{
  margin: 0 auto;
  margin-bottom: 25rpx;
  margin-top: 45rpx;
  width: 85rpx;
  height: 85rpx;
  text-align: center;
  border-radius: 50%;
  overflow: hidden;
}
.menu-icon image{
  width: 100%;
  height: 100%;
}
.menu-name{
  width: 100%;
  text-align: center;
  color: #353535;
  font-size: 22rpx;
}
.recomend-container{
  width: 670rpx;
  margin: 0 auto;
}
.rec-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size:36rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(17,17,17,1);
}
.rec-item{
  position: relative;
  width: 670rpx;
  height: 246rpx;
  background:rgba(255,255,255,1);
  box-shadow:4px 1px 37px 3px rgba(12,12,13,0.06); 
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}
.rec-img{
  position: absolute;
  top: -20rpx;
  left: 0;
  width: 252rpx;
  height: 251rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.rec-img image{
  width: 100%;
  height: 100%;
}
.rec-info-container{
  float: right;
  width: 416rpx;
  height: 100%;
}
.rec-name{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(37,37,37,1);
  line-height:48rpx;
  padding: 10rpx 20rpx 0 20rpx;
}
.rec-style{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(137,137,137,1);
  text-indent: 20rpx;
}
.rec-style text{
  margin-left: 20rpx;
}
.rec-color{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(137,137,137,1);
  text-indent: 20rpx;
}
.rec-color text{
  display: inline-block;
  width:24rpx;
  height:24rpx;
  background:rgba(209,170,136,1);
  border-radius:12px;
}
.rec-price{
  width: 92%;
  height: 50rpx;
  line-height: 50rpx;
  font-size:36rpx;
  font-family:PingFangSC-Regular;
  font-weight:bold;
  color:rgba(217,0,0,1);
  opacity:0.88;
  margin-right: 20rpx;
  text-align: right;
}