/* pages/store/category.wxss */
.shop-bg{
  position: relative;
  width: 750rpx;
}
.shop-bg .bg{
  width: 100%;
  height: 100%;
}
.status-bar{
  /* position: absolute; */
  top: 0;
}
.nav-tool{
  /* position: absolute; */
  left: 20rpx;
}
.back{
  display: inline-block;
  width: 30rpx;
  height: 100%;
  margin-left: 20rpx;
}
.back image{
  width: 23rpx;
  height: 43rpx;
  vertical-align: middle;
}
.search{
  position: relative;
  width:500rpx;
  height:62rpx;
  display: inline-block;
  background:rgba(243,243,243,1);
  border-radius:31px;
  vertical-align: middle;
  margin-left: 20rpx;
}
.search input{
  width:584rpx;
  height:62rpx;
  color: #fff;
  text-indent: 10rpx;
}
.search-icon{
  position: absolute;
  left: 20rpx;
  top: 50%;
  width: 150rpx;
  height: 28rpx;
  margin-top: -45rpx;
}
.search-icon image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}
.search-text{
  display: inline-block;
  line-height: 62rpx;
  font-size:27rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#979797;
  vertical-align: middle;
  margin-left: 15rpx;
}

/* 类目 */
.category-container{
  width: 750rpx;
  height: 100%;
}
.second-category{
  float: left;
  box-sizing: border-box;
  width: 149rpx;
  height: 100%;
  background:rgba(247,247,247,1);
}
.second-item{
  box-sizing: border-box;
  width: 100%;
  height: 141rpx;
  text-align: center;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(58,58,58,1);
  line-height:40rpx;
  padding: 30rpx 40rpx 10rpx;
  border-top: 1px solid #fff;
}
.second-active{
  border-left: 10rpx solid #B49D64;
  background: #fff;
  font-size:26rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(0,0,0,1);
}
.third-category{
  float: left;
  display: flex;
  flex-wrap: wrap;
  align-content:space-around;
  width: 600rpx;
  height: auto;
  box-sizing: border-box;
  background: #fff;
}
.third-item{
  width: 200rpx;
  height:200rpx;
  text-align: center;
}
.third-img{
  display: inline-block;
  width: 96rpx;
  height: 96rpx;
  border-radius: 4rpx;
  overflow: hidden;
  margin-top: 30rpx;
}
.third-img image{
  width: 100%;
  height: 100%;
}
.third-text{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(58,58,58,1);
  line-height:60rpx;
}