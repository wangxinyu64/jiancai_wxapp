/* pages/store/category.wxss */
.shop-bg{
  position: relative;
  width: 750rpx;
}
.shop-bg .bg{
  width: 100%;
  height: 100%;
}
.status-bar{
  position: absolute;
  top: 0;
}
.nav-tool{
  position: absolute;
  left: 20rpx;
}
.back{
  display: inline-block;
  width: 30rpx;
  height: 100%;
}
.back image{
  width: 23rpx;
  height: 43rpx;
  vertical-align: middle;
}
.search{
  position: relative;
  width:500rpx;
  height:62rpx;
  display: inline-block;
  background:rgba(243,243,243,1);
  border-radius:31px;
  vertical-align: middle;
  margin-left: 20rpx;
}
.search input{
  width:584rpx;
  height:62rpx;
  color: #fff;
  text-indent: 10rpx;
}
.search-icon{
  position: absolute;
  left: 20rpx;
  top: 50%;
  width: 150rpx;
  height: 28rpx;
  margin-top: -45rpx;
}
.search-icon image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}
.search-text{
  display: inline-block;
  line-height: 62rpx;
  font-size:27rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#979797;
  vertical-align: middle;
  margin-left: 15rpx;
}