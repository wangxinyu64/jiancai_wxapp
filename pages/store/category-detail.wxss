/* pages/store/category-detail.wxss */
page{
  background:#f8f8f8;
}
.banner-container{
  width: 750rpx;
  z-index: -1;
}
.banner-container swiper{
  width: 100%;
  height: 518rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.goods-info-container{
  width: 750rpx;
  /* height: 332rpx; */
  background:rgba(255,255,255,1);
  box-shadow:2px 0px 7px 1px rgba(12,12,13,0.1);
  border-radius:30px;
  overflow: hidden;
  z-index: 990;
}
.goods-navigation{
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  background:rgba(241,241,241,1);
}
.navigation{
  float: left;
  width: 70%;
  height: 100%;
  text-indent: 30rpx;
  font-size:22rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(101,101,101,1);
}
.navigation text{
  margin-right: 20rpx;
}
.goods-sales{
   float: right;
  width: 30%;
  height: 100%;
    font-size:22rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(101,101,101,1);
  text-align: center;
}
.goods-name{
  width: 674rpx;
  height: auto;
  margin: 0 auto;
  font-size:34rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(37,37,37,1);
  line-height:48rpx;
  padding: 20rpx 0;
}
.goods-style{
  position: relative;
  width: 674rpx;
  height: 40rpx;
  margin: 0 auto;
  line-height: 40rpx;
  font-size: 26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(137,137,137,1);
  padding: 10rpx 0;
}
.goods-color{
  width: 674rpx;
  height: 40rpx;
  margin: 0 auto;
  line-height: 40rpx;
  font-size: 26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(137,137,137,1);
}
.goods-style text{
  color: #404040;
  margin-left: 30rpx;
}
.goods-color text{
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  background:rgba(209,170,136,1);
  border-radius:50%;
  margin-left: 30rpx;
}
.goods-size{
  position: relative;
  width: 674rpx;
  height: 40rpx;
  margin: 0 auto;
  line-height: 40rpx;
  font-size: 26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(137,137,137,1);
  padding: 10rpx 0;
  margin-bottom: 30rpx;
}
.more{
  position: absolute;
  width: 10rpx;
  height: 19rpx;
  top: 50%;
  right: 0;
  margin-top: -10rpx;
}
.more image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}
.goods-detail-container{
  width: 690rpx;
  margin: 0 auto;

}
.detail-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight: 600;
  color:rgba(19,19,19,1);
}
.goods-images{
  width: 100%;
  text-align: center;
}
.goods-images image{
  wdith: 100%;
  margin: 10rpx 0;
}
.bottom-container{
  position: fixed;
  bottom: 0;
  left: 30rpx;
  width: 700rpx;
  height: 98rpx;
  background: #fff;
}
.price{
  float: left;
  width: 40%;
  height: 100%;
  line-height: 98rpx;
}
.pre-price{
  font-size:24rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(147,147,147,1);
  opacity:0.88;
}
.now-price{
  font-size:42rpx;
  font-family:PingFangSC-Regular;
  font-weight:bold;
  color:rgba(217,0,0,1);
  opacity:0.88;
  margin-left:20rpx;
}
.buy-button{
  float: right;
  width: 60%;
  height: 100%;
  line-height: 98rpx;
  color: #fff;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
}
.push-cart{
  display: inline-block;
  width: 200rpx;
  height: 71rpx;
  line-height: 71rpx;
  text-align: center;
  background:rgba(180,157,100,1);
  border-top-left-radius:36rpx;
  border-bottom-left-radius:36rpx;
  box-shadow:0px 0px 9rpx 1rpx rgba(51,51,51,0.4);
}
.buy-now{
  display: inline-block;
  width: 200rpx;
  height: 71rpx;
  line-height: 71rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(54,54,54,1),rgba(15,15,15,1));
  border-top-right-radius:36rpx;
  border-bottom-right-radius:36rpx;
  box-shadow:0px 0px 9rpx 1rpx rgba(51,51,51,0.4);
}