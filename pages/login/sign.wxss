/* pages/login/sign.wxss */
.login-container{
  width: 750rpx;
  margin-top: 250rpx;
}
.phone{
  position: relative;
  width: 591rpx;
  height: 95rpx;
  background:rgba(238,238,238,1);
  border-radius:4px;
  margin: 0 auto;
  box-sizing: border-box;
}
.phone-focus{
  position: relative;
  width: 591rpx;
  height: 95rpx;
  background:#fff;
  border:2px solid rgba(180,157,100,1);
  border-radius:4px;
  margin: 0 auto;
  box-sizing: border-box;
}
.phone-area{
  float: left;
  width: 130rpx;
  height: 100%;
  line-height: 95rpx;
  text-align: center;
  font-size:30rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(133,133,133,1);
  border-right: 1px solid rgba(220,220,220,1);
}
.phone-input{
  float: right;
  width: 448rpx;
  height: 100%;
  line-height: 95rpx;
}
.phone-input input{
  width: 100%;
  height: 100%;
  margin-left: 20rpx;
}
.auth-code{
  width: 591rpx;
  height: 95rpx;
  background:rgba(238,238,238,1);
  border-radius:4px;
  margin: 0 auto;
  margin-top: 60rpx;
}
.code-focus{
  width: 591rpx;
  height: 95rpx;
  background:rgba(255,255,255,1);
  border-radius:4px;
  margin: 0 auto;
  margin-top: 60rpx;
 border:2px solid rgba(180,157,100,1);
}
.auth-code-input{
  position: relative;
  float: left;
  width: 425rpx;
  height: 100%;
  line-height: 95rpx;
  margin-left: 20rpx;
}
.auth-code-input input{
  width: 100%;
  height: 100%;
}
.get-code{
  float: left;
  width: 130rpx;
  height: 100%;
  line-height: 95rpx;
  text-align: center;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:300;
  color:#B49D64;
}
.submit-btn-no{
  width: 591rpx;
  height: 95rpx;
  line-height: 95rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  background:rgba(21,21,21,1);
  opacity:0.8;
  border-radius:4px;
  font-size:26rpx;
  text-align: center;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(180,157,100,0.5);
}
.submit-btn-yes{
  width: 591rpx;
  height: 95rpx;
  line-height: 95rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  background:rgba(21,21,21,1);
  border-radius:4px;
  font-size:26rpx;
  text-align: center;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(180,157,100,1);
}
.cancel{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  top: 50%;
  margin-top: -15rpx;
  right: 24rpx;
  z-index: 998;
}
.bg{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 241rpx;
}
.bg image{
  width: 100%;
  height: 100%;
}