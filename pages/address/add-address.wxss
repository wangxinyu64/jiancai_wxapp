/* pages/address/add-address.wxss */
page{
  background:rgba(248,248,248,1);
}
.address-info-container{
  width: 710rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  background: #fff;
  border-radius:20rpx;
}
.addr-name{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.addr-title{
  float: left;
  width: 150rpx;
  height: 100%;
  text-indent: 25rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(162,162,162,1);
}
.input-con{
  float: right;
  width: 500rpx;
  height: 100%;

}
.input-con input{
  width: 100%;
  height: 100%;
}
.addr-detail{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.more{
  float: right;
  width: 50rpx;
  height: 100%;
}
.more image{
  width: 12rpx;
  height: 23rpx;
  vertical-align: middle;
}
.detail{
  width: 100%;
  height: 200rpx;
  line-height: 36rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  padding: 20rpx;
  box-sizing: border-box;
  
}
.detail textarea{
  margin: 0 auto;
  width:98%;
  height: 100%;
}
.default-addr{
  width:710rpx;
  height:113rpx;
  line-height: 113rpx;
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  margin: 0 auto;
}
.default-title{
  float: left;
  width: 300rpx;
  height: 100%;
  line-height: 113rpx;
  text-indent: 30rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:500;
  color:rgba(25,25,25,1);
}
.set-default{
  float: right;
  width: 100rpx;
  height: 100%;
}